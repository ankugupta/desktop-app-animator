{
  "appId": "com.berrygarden.desktop.book.animator",
  "productName": "Berry Garden",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!**/*.js.map",
    "!*.code-workspace",
    "!LICENSE.md",
    "!README.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!dev-notes/",
    "!browserslist",
    "!**/{angular.json,angular.webpack.js,tsconfig.spec.json,tslint.json,tsconfig-serve.json,tsconfig.app.json,tsconfig.json}"
  ],
  "publish": {
    "provider": "s3",
    "bucket": "book-animator",
    "path": "/prod-desktop/app-releases/Pub0002_BerryGarden"
  },
  "win": {
    "icon": "dist/DigiBook",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ]
  },
  "nsis": {
    "deleteAppDataOnUninstall": true,
    "createDesktopShortcut": "always"
  },
  "mac": {
    "icon": "dist/DigiBook",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/DigiBook",
    "target": [
      "AppImage"
    ]
  }
}